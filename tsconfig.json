{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "baseUrl": "./src",
        "outDir": "build",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "moduleResolution": "node",
        "module": "CommonJS",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*"
    ]
}
